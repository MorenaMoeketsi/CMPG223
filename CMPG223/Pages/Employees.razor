@page "/employees"
@using CMPG223.Data
@inject IDatabaseService _dataService
<h3>Employees</h3>

@if (_employees == null)
{
    <p>
        <em>Loading...</em>
    </p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Surname</th>
            <th>Role</th>
            <th>Is Active</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var employee in _employees)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Surname</td>
                <td>@employee.RoleName</td>
                <td>@employee.IsActive</td>
                <td>
                    <button @onclick="@(() => Edit(employee))">Edit</button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
<div hidden="@_isEditHidden">
    <p>Test</p>
</div>

@code {
    private bool _isEditHidden = true;
    private List<Employee> _employees;
    private Employee _selectedEmployee = new Employee();

    protected override async Task OnInitializedAsync()
    {
        _employees = await _dataService.GetEmployees();
    }

    void Edit(Employee employee)
    {
        _selectedEmployee = employee;
        _isEditHidden = false;
    }

}